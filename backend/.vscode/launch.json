{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Actix (debug)",
      "type": "lldb",
      "request": "launch",
      "initCommands": [
        "settings set target.disable-aslr false"
      ],
      "cargo": {
        "args": [
          "run"
        ],
        "filter": {
          "name": "backend",
          "kind": "bin"
        }
      },
      "env": {
        "RUST_LOG": "debug",
        "DATABASE_URL": "postgres://app:app@db:5432/appdb"
      },
      "cwd": "/workspace/backend"
    }
  ]
}